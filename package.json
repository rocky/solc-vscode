{
    "name": "vscode-solc",
    "description": "VSCode support of Solidity using using primarily solc",
    "author": "Rocky Bernstein",
    "publisher": "rocky",
    "enableProposedApi": true,
    "engines": {
        "vscode": "^1.36.0"
    },
    "license": "MIT",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/rocky/vscode-solc"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "solidity",
        "ethereum"
    ],
    "activationEvents": [
        "onView:solcAstView",
        "onCommand:solidity.reveal",
        "onLanguage:solidity",
        "onCommand:solidity.compile"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "solcAstView",
                    "name": "Solidity AST Tree View"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Solidity configuration",
            "properties": {
                "solidity.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 10,
                    "description": "Controls the maximum number Solidity compiler errors/warnings the server will return."
                },
                "solidity.compilerOptions.remappings": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "title": "Compiler remappings",
                        "properties": {
                            "prefix": {
                                "type": "string",
                                "description": "The prefix to remap"
                            },
                            "path": {
                                "type": "string",
                                "description": "The path to remap the prefix to"
                            }
                        }
                    },
                    "default": [],
                    "description": "Compiler remappings"
                }
            }
        },
        "languages": [
            {
                "id": "solidity",
                "aliases": [
                    "Solidity",
                    "solidity"
                ],
                "extensions": [
                    ".sol"
                ],
                "configuration": "./solidity.configuration.json"
            }
        ],
        "commands": [
            {
                "command": "solcAstView.reveal",
                "title": "Solidity AST View: Reveal"
            },
            {
                "command": "solidity.compile",
                "title": "Solidity: Compile Contract"
            }
        ],
        "keybindings": [
            {
                "command": "solidity.compile",
                "key": "f5",
                "mac": "f5",
                "when": "editorTextFocus && editorLangId == 'solidity'"
            },
            {
                "command": "solidity.compile",
                "key": "Ctrl+f5",
                "mac": "Cmd+f5",
                "when": "editorTextFocus && editorLangId == 'solidity'"
            }
        ],
        "snippets": [
            {
                "language": "solidity",
                "path": "./snippets/solidity.json"
            }
        ],
        "grammars": [
            {
                "language": "solidity",
                "scopeName": "source.solidity",
                "path": "./syntaxes/solidity.json"
            }
        ]
    },
    "icon": "images/icon.png",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "build": "tsc -p ./",
        "grammar": "npm run grammar-lint && npx js-yaml syntaxes/solidity.yaml > syntaxes/solidity.json",
        "grammar-test": "npx yaml-lint syntaxes/solidity-test.yaml && npx js-yaml syntaxes/solidity-test.yaml > syntaxes/solidity.json",
        "grammar-lint": "npx yaml-lint syntaxes/solidity.yaml",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./",
        "update-vscode": "vscode-install",
        "prepare": "npm run build"
    },
    "dependencies": {
        "solc-lsp": "file:../solc-lsp",
        "solparse": "^2.2.8"
    },
    "devDependencies": {
        "@types/node": "*",
        "@types/vscode": "^1.32.0",
        "js-yaml": "^3.13.1",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "yaml-lint": "^1.2.4"
    }
}
